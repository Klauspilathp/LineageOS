		UPDATE sys_role_menu SET 
			menuId = #{menuId, jdbcType=INTEGER} 
		WHERE roleId = #{roleId, jdbcType=BIGINT}
	</update>
	
	<!-- 只更新不为 null 和 空字符串的字段 -->
