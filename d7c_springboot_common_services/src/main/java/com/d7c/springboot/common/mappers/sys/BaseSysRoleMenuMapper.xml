		UPDATE sys_role_menu 
		<trim prefix="set" suffixOverrides=",">
			<if test="null != menuId">
				menuId = #{menuId, jdbcType=INTEGER}, 
			</if>
		</trim>
		WHERE roleId = #{roleId, jdbcType=BIGINT}
	</update>
	
